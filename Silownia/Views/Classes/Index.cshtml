@model IEnumerable<Silownia.Models.DbModels.Class>

@{
    ViewBag.Title = "Zajęcia";
}



<h2 style="color:deeppink">Zajęcia</h2><br />

<p>
    <!--Html.ActionLink("Create New", "Create")-->
</p>

@using (Html.BeginForm())
{
    <p>
        Szukaj po nazwie: @Html.TextBox("searchString")
        <input class="btn btn-primary mx-2" style="background-color: hotpink; color: white" type="submit" value="Szukaj" />
    </p>
}
<table class="table">
    <tr>

        <th>
            Rodzaj zajęć
        </th>

        <th>
            Cena
        </th>
        <th>
            Czas trwania
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ClassType)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <!--Html.ActionLink("Edit", "Edit", new { id = item.ClassId }) |-->
                <button class="btn btn-primary mx-2" style="background-color: ivory; color: white">
                    @Html.ActionLink("Kiedy?", "DetailsSchedule")</button> 
                <button class="btn btn-primary mx-2" style="background-color: ivory; color: white">
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.ClassId })</button>
                                                <!--Html.ActionLink("Delete", "Delete", new { id = item.ClassId }) -->
</td>
            </tr>
        }

    </table>
